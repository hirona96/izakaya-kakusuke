<%= render "shared/header" %>

<div class="main">
  <div class="comment-top">
    <% if @comments[0] == nil %>
    <div class="texts">口コミ投稿ができます</div>
    <% end %>

        <% @comments.each do |comment| %>
        <div class="comment-list">

        <%= link_to "#", class:"link-texts" do %>
          <div class="comment-wrapper">
            <div class="comment-head">
              <%= image_tag "22352894.png", class:"comment-icon"%>
              <div class="link-texts">評価：</div>
              <div class="evaluation">
              <%= comment.evaluation.name %>
              </div>
            </div>
            <div class="comment-body">
              <div class="link-texts">
              <%= comment.comment %>
              </div>
              <%= image_tag comment.image, class: "comment-image" if comment.image.attached? %>
            </div>
          </div>
        <% end %>
        </div>
        <% end %>

  </div>

  <%= form_with model: @comment, url: comments_path, class: 'comment', local: true do |f| %>

    <div class="c-wrapper">
    <%= render 'shared/error_messages', model: f.object %>

    <div class="comment-main">
      <div class="weight-bold-text">
      <span>評価：</span>
        <%= f.collection_select(:evaluation_id, Evaluation.all, :id, :name, {}, {class:"select"}) %>
          <span class="indispensable">*必須</span>
      </div>
        <%= f.text_area :comment, class:"comment-text", placeholder:"コメント(必須)" %>
        <%= f.file_field :image, class: "comment-image" %>
        <%= f.submit "送信", class:"comment-btn" %>
    </div>
    </div>

  <% end %>

</div>


<%= render "shared/footer" %>
