<%= render "shared/header" %>

<%= form_with model: @employee, url: employee_registration_path, class: 'main', local: true do |f| %>

<div class="registration-main">
  <div class="registration-side">
    <div class='form-header'>
      <h1 class='form-header-text'>
        登録情報入力
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

  <div class='registration-wrap'>
    
    <div class="registration-content">
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">スタッフNo.</label>
        <span class="indispensable">*必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_field :employee_num, class:"input-default", id:"employee_num", placeholder:"十桁の半角英数字",maxlength:"10"%>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">*必須</span>
      </div>
        <%= f.text_area :name, class:"input-name", id:"first-name-kana", placeholder:"例) ヒロ" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">一言</label>
        <span class="indispensable">*必須</span>
      </div>
      <div class='input-wrap'>
         <%= f.text_area :one_thing, class:"input-text", placeholder:"例）ご来店お待ちしています！" %>
      </div>
    </div>
    </div>
    <div class="registration-content">
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">*必須</span>
      </div>
      <div class='input-wrap'>
          <%= f.text_field :email, class:"input-default", id:"email", placeholder:"abc@icloud.com" %>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">*必須</span>
      </div>
      <div class='input-date-wrap'>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"半角英数字",maxlength:"10"%>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード再入力</label>
        <span class="indispensable">*必須</span>
      </div>
      <div class='input-date-wrap'>
        <%= f.password_field :encrypted_password, class:"input-default", id:"encrypted_password", placeholder:"再入力",maxlength:"10"%>
      </div>
    </div>
    </div>
  </div>

    <div class="registration-group">
      <div class='registration-btn'>
        <%= f.submit "登録" ,class:"registration-red-btn" %>
      </div>
    </div>
    </div>
</div>
<% end %>
  
<%= render "shared/footer" %>