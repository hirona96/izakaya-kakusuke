<div id='map'></div>

<style>
#map {
  height: 400px;
  width: 600px;
  border: 2px solid lightgray;
}
</style>

<script>
let map

function initMap(){
  geocoder = new google.maps.Geocoder()

  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: 36.3730493, lng:140.4735677},
    zoom: 17,
  });

  marker = new google.maps.Marker({
    position:  {lat: 36.3730493, lng:140.4735677},
    map: map
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.API_KEY %>&callback=initMap" async defer></script>